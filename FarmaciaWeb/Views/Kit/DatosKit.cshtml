@model FarmaciaWeb.Models.kit
@if (ViewBag.medicamentos != null)
{
    <form  class="row" id="cliente">
        <div class="form-group col-3">
            <label>Nombre del combo:</label>
            @Html.TextBoxFor(x => x.nombre, htmlAttributes: new { @class = "form-control form-control-solid" })
            @Html.ValidationMessageFor(x => x.nombre, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="form-group col-2">
            <label>Ahorro total:</label>
            @Html.TextBoxFor(x => x.ahorro, htmlAttributes: new { @class = "form-control form-control-solid", @readonly = "readonly", Value = String.Format("${0:0.00}", ViewBag.ahortoT) })
        </div>
        <div class="form-group col-2">
            <label>Productos:</label>
            @Html.TextBoxFor(x => x.cantidad_med, htmlAttributes: new { @class = "form-control form-control-solid", @readonly = "readonly", Value = ViewBag.cantidadT })
        </div>
        <div class="form-group col-2">
            <label>Costo total:</label>
            @Html.TextBoxFor(x => x.costo, htmlAttributes: new { @class = "form-control form-control-solid", @readonly = "readonly", Value = String.Format("${0:0.00}", ViewBag.costoT) })
        </div>
        <div class="form-group col-3">
            <label>Descripción:</label>
            @Html.TextAreaFor(x => x.descripcion, htmlAttributes: new { @class = "form-control form-control-solid" })
            @Html.ValidationMessageFor(x => x.descripcion, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </form>

}