
@{
    ViewBag.Title = "Reportes";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div class="row">
    <div class="col-xl-4 mb-4">
        <a class="card lift h-100">
            <div class="card-body d-flex justify-content-center flex-column">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="me-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-book feather-xl text-secondary mb-3"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path></svg>
                        <h5>Reporte Empleados</h5>
                        <div class="text-muted small">Reporte de Empleados en la farmacia web, con sus datos general con el objetivo de tener un control.</div>
                    </div>
                    <i class="fas fa-user-tie" style="font-size:4rem;"></i>
                </div>
            </div>
            <div class="card-footer text-center">
                <input type="button" class="btn btn-outline-primary" value="Mostrar" id="btnIncrustarEmpleado"/>
            </div>
        </a>
    </div>
    <div class="col-xl-4 mb-4">
        <a class="card lift">
            <div class="card-body d-flex justify-content-center flex-column">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="me-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-layout feather-xl text-green mb-3"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="3" y1="9" x2="21" y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg>
                        <h5>Reporte Medicamentos</h5>
                        <div class="text-muted small">Reporte de Medicamentos, en los cuales se tiene un vista sobre la categorias, fecha de expedicion o vencimiento de cada producto.</div>
                    </div>
                    <i class="fas fa-prescription-bottle-alt" style="font-size:4rem;"></i>
                </div>
            </div>
            <div class="card-footer text-center">
                <input type="button" class="btn btn-outline-primary" value="Mostrar" id="btnIncrustarMedicamentos" />
            </div>
        </a>
    </div>
    <div class="col-xl-4 mb-4">
        <a class="card lift h-100">
            <div class="card-body d-flex justify-content-center flex-column">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="me-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-package feather-xl text-primary mb-3"><line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
                        <h5>Reporte Proveedores</h5>
                        <div class="text-muted small">Reporte de Proveedores socios de la farmacia web, con datos generales e información de primera mano.</div>
                    </div>
                    <i class="far fa-building" style="font-size:4rem;"></i>
                </div>
            </div>
            <div class="card-footer text-center">
                <input type="button" class="btn btn-outline-primary" value="Mostrar" id="btnIncrustarProveedores" />
            </div>
        </a>
    </div>
</div>
<iframe id="report" style="width:100%; height:600px" frameborder="0" scrolling="yes">
</iframe>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
        $(document).ready(function () {


            $("#btnIncrustarEmpleado").click(function () {
                window.open("@Url.Action("VerReporte", new {tipo = "empleado" })");
            });


            $("#btnIncrustarMedicamentos").click(function () {
                window.open("@Url.Action("VerReporte", new {tipo = "medicamento" })");
            });


            $("#btnIncrustarProveedores").click(function () {
                window.open("@Url.Action("VerReporte", new {tipo = "proveedor" })");

            });


        });
</script>
}
